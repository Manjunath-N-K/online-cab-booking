


<%- include ("../partials/header.ejs") %>

<div class="container">
    <h1 style="text-align:center">EDIT COMMENT</h1>
    <div class="row">
        </br>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/drivers/<%= driver_id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/drivers">Go Back</a>
        </div>
    </div>
</div>


