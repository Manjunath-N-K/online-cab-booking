<%- include("../partials/header.ejs") %>

<div class="container">
  <h1 style="text-align: center;">Book a cab</h1>
  <div class="row">
    <div style="width: 30%; margin: 35px auto;">
      <form action="/book" method="post">
        <div class="form-group">
          <input
            class="form-control"
            id="pickup"
            type="text"
            name="pickup"
            placeholder="PickUp Location"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            id="drop"
            type="text"
            name="drop"
            placeholder="Drop Location"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="date"
            name="date"
            placeholder="date"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="time"
            name="time"
            placeholder="time"
          />
        </div>
        <div class="form-group">
        
          <button class="btn btn-lg btn-primary btn-block">Book Now!</button>
        </div>
      </form>

      <a href="/">Back to Home</a>
    </div>
  </div>
</div>

