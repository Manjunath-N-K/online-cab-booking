<%- include ("../partials/header.ejs") %>

<div class="container m-t">
    <h1 style="text-align:center">edit  driver <%= driver.name %></h1>
    <div class="row">
        
      <div style="width:30%;  margin:30px auto">
        
        <form action="/drivers/<%= driver._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="driver[name]" value="<%= driver.name %>">
            </div>
            <div class="form-group">
                <input
                  class="form-control"
                  type="number"
                  name="driver[price]"
                  value="<%= driver.price %>"
                  min="0.01"
                  step="10"
                />
              </div>
           <div class="form-group">
            <input  class="form-control" type="text" name="driver[image]" value="<%= driver.image %>">
           </div>
            <div class="form-group">
                <input class="form-control" type="text" name="driver[licNo]" value="<%= driver.licNo %>" >
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="driver[place]" value="<%= driver.place %>" >
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="driver[phone]" value="<%= driver.phone %>" >
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="driver[text]" value="<%= driver.text %>" >
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="driver[car]" value="<%= driver.car %>">
            </div>



            <div class="form-group">
                <input class="form-control" type="text" name="driver[reg]" value="<%= driver.reg %>" >
            </div>

            <div class="form-group">
                <input class="form-control" type="text" name="driver[email]" value="<%= driver.email %>" >
            </div>






          <div class="form-group">
            <button class="btn btn-lg btn-block  btn-primary">submit</button>
         </div>
    </form>
            
            <a href="/drivers">Go back</a>
        </div>
            
            

    </div>


</div>